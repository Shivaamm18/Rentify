{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://rentify-server.onrender.com/api/$1"
    },
    {
      "src": "/static/(.*)",
      "dest": "/client/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/$1",
      "check": true
    },
    {
      "src": "/(.*)",
      "status": 200,
      "dest": "/client/index.html"
    }
  ]
}
